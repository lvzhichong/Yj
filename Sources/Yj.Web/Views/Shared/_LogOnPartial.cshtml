@{
    string nick_name = "";
    
    string user_id = "";

    if (Request.IsAuthenticated)
    {
        Yj.Models.ls_user user = Yj.Biz.ls_userBiz.Instance.GetModelByName(User.Identity.Name);

        nick_name = User.Identity.Name;

        if (user != null)
        {
            user_id = user.user_id.ToString();
            
            if( !string.IsNullOrEmpty(user.nick_name))
            {
                nick_name = user.nick_name;
            }
        }
    }
}
